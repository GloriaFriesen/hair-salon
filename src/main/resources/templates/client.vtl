<!--client.vtl-->
<h2>$client.getName()</h2>

#if ($stylist.getId())
  <h2>Currently assigned stylist: $stylist.getName()</h2>
#else
  <h2>No stylist</h2>
#end

<div class="well">
  #if ($stylists.size() > 0)
    <h2>Update or Delete $client.getName().</h2>
    <form action="/stylists/$client.getStylistId()/clients/$client.getId()" method="post">
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" value="$client.getName()" class="form-control">
      </div>

      <label for="stylist_id">Select a stylist</label>
      <select id='stylist_id' name='stylist_id' type='text'>
        #foreach($stylist in $stylists)
          <option value="$stylist.getId()">$stylist.getName()</option>
        #end
      </select>
      <button type="submit" class="btn">Update $client.getName()</button>
    </form>

    <form action="/stylists/$client.getStylistId()/clients/$client.getId()/delete" method="post">
      <button type="submit" class="btn">Remove $client.getName()</button>
    </form>

    #else
      <h4>There are currently no stylists at this salon. Please add one in order to make changes to $client.getName().</h4>
      <a href="/stylists/new"><button type="button" class="btn">Add Stylist</button></a>
    #end

</div>
